{
  "name": "monitoreo-apirest",
  "version": "1.1.1",
  "description": "Sistema de GestiÃ³n de Incidencias de SemÃ¡foros - Monorepo",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "pm2 start ecosystem.config.js",
    "dev:stop": "pm2 stop ecosystem.config.js",
    "dev:restart": "pm2 restart ecosystem.config.js",
    "dev:delete": "pm2 delete ecosystem.config.js",
    "dev:logs": "pm2 logs",
    "dev:status": "pm2 status",
    "build": "npm run build --workspaces --if-present",
    "test": "npm run test --workspaces --if-present",
    "lint": "npm run lint --workspaces --if-present",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "backend:dev": "npm run dev -w apps/backend",
    "backend:build": "npm run build -w apps/backend",
    "backend:start": "npm run start:prod -w apps/backend",
    "frontend:dev": "npm run dev -w apps/frontend",
    "frontend:build": "npm run build -w apps/frontend",
    "frontend:preview": "npm run preview -w apps/frontend",
    "prisma:generate": "npm run prisma:generate -w apps/backend",
    "prisma:migrate": "npm run prisma:migrate -w apps/backend",
    "prisma:studio": "npm run prisma:studio -w apps/backend",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "version:patch": "./scripts/version-bump.sh patch",
    "version:minor": "./scripts/version-bump.sh minor",
    "version:major": "./scripts/version-bump.sh major",
    "release": "./scripts/release.sh"
  },
  "keywords": [
    "monitoreo",
    "semaforos",
    "incidencias",
    "nestjs",
    "react",
    "postgresql",
    "prisma",
    "leaflet"
  ],
  "author": "EMC-GMU",
  "license": "MIT",
  "devDependencies": {
    "@types/multer": "^2.0.0",
    "@types/node": "^20.10.0",
    "@types/react-select": "^5.0.0",
    "prettier": "^3.1.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "dependencies": {
    "react-select": "^5.10.2"
  }
}
